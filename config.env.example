# Rita Watchdog Configuration
# Copy this file to config.env and fill in your values:
#   cp config.env.example config.env

# UptimeRobot Heartbeat URLs (create at uptimerobot.com)
POWER_HEARTBEAT_URL="https://heartbeat.uptimerobot.com/your-power-monitor-url"
WIFI_HEARTBEAT_URL="https://heartbeat.uptimerobot.com/your-wifi-monitor-url"
FOURG_HEARTBEAT_URL="https://heartbeat.uptimerobot.com/your-4g-monitor-url"

# Network interfaces
WIFI_INTERFACE="wlan0"
FOURG_INTERFACE="eth0"

# WiFi connection name (find with: nmcli connection show)
WIFI_CONNECTION_NAME="your-wifi-network-name"

# Host to ping for connectivity check
CHECK_HOST="8.8.8.8"
